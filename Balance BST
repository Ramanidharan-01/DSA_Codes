# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, val=0, left=None, right=None):
#         self.val = val
#         self.left = left
#         self.right = right
class Solution:
    def balanceBST(self, root: Optional[TreeNode]) -> Optional[TreeNode]:
        sorted_nodes=[]
        def inorder(node):
            if not node:
                return 
            inorder(node.left)
            sorted_nodes.append(node.val)
            inorder(node.right)
        inorder(root)
        def buildtree(nodes):
            if not nodes:
                return None
            mid = len(nodes)//2
            root = TreeNode(nodes[mid])
            root.left=buildtree(nodes[:mid])
            root.right=buildtree(nodes[mid+1:])
            return root
        return buildtree(sorted_nodes)
